# Configuración de Google Cloud
GCP_PROJECT_ID=tu-proyecto-gcp
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Perfil de Spring Boot
SPRING_PROFILES_ACTIVE=prod

# Configuración de Base de Datos
# Para Cloud SQL, usar el formato:
# jdbc:postgresql:///<DB_NAME>?cloudSqlInstance=<PROJECT_ID>:<REGION>:<INSTANCE_NAME>&socketFactory=com.google.cloud.sql.postgres.SocketFactory
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/db_parking_local?useSSL=false
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=tu-password-seguro
SPRING_DATASOURCE_DB_NAME=db_parking_local

# Configuración de Cloud SQL (si se usa)
CLOUD_SQL_INSTANCE=proyecto:region:instancia

# Configuración de JWT
SPRING_JWT_SECRET=tu-jwt-secret-key-aqui
SPRING_JWT_EXPIRATION=100000000

# Puerto de la aplicación
PORT=9000

# Configuración local de PostgreSQL (solo para desarrollo)
POSTGRES_DB=db_parking_local
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432

